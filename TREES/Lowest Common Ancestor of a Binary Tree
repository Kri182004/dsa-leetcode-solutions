/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
        if(root==nullptr) return nullptr;
        if(root==p||root==q)return root;
        TreeNode* leftN= lowestCommonAncestor(root->left,p,q);
        TreeNode* rightN= lowestCommonAncestor(root->right,p,q);
        if(leftN!=nullptr&&rightN!=nullptr)
        return root;//if we get both p and q from leftnode and rightnode of a root->thsts the LCA 
        if(leftN!=nullptr)//if we did not get both p and q and get null from one of the side then , from where we get it->Thats the LCA.
        return leftN;
        return rightN;   
    }
};//we used->Backtracking
